<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render "layouts/header" unless @disable_nav %>

    <% flash.each do |type, msg| %>
      <div>
        <strong><%= msg %></strong>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
